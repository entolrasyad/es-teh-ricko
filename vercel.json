{
  "version": 2,
  "framework": null, 
  "regions": ["sin1"],             
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
    "installCommand":  "composer install --no-dev --optimize-autoloader",
    "buildCommand":    "php artisan config:cache && php artisan route:cache && php artisan view:cache",
  "routes": [
    {
      "src": "/build/(.*)",      
      "dest": "/build/$1"
    },
    {
      "src": "/(.*)",           
      "dest": "/api/index.php"
    }
  ],
  "outputDirectory": "public"
}
